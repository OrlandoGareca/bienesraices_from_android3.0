<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/fondo_pantalla_inicio"
        android:orientation="horizontal"
        android:id="@+id/linearLayout6">

        <Button
            android:id="@+id/button14"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icono_inicio"
            android:onClick="ejecutar_opcion_izquierda"
            android:text="" />

        <SearchView
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_esquinascurvas"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_preferences"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout6"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:id="@+id/linearLayout7">

        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_dialog_map"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Mapa"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="21sp"
            android:onClick="ejecutar_mapa_cliente"/>

        <Button
            android:id="@+id/boton_ordenar"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/ic_menu_sort_by_size" />

        <TextView
            android:id="@+id/btnShowPMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Ordenar"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="21sp" />

    </LinearLayout>
    <include
        layout="@layout/app_bar_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout7" />

</RelativeLayout>