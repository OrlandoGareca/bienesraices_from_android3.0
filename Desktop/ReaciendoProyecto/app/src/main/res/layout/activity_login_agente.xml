<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8000"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Agentes"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/imagen_casa"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/texto_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView21"
        android:layout_centerHorizontal="true"
        android:text="Usuario"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
         />

    <EditText
        android:id="@+id/ingresa_usuario"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/texto_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="usuario"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/texto_contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        />


    <EditText
        android:id="@+id/ingresa_contraseña"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:hint="contraseña"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/ingresa_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button_ingresar_agentes"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ingresa_contraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="login_age"
        android:text="Ingresar"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"/>

</LinearLayout>